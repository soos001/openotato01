        <script>
            $('.inputss.one input').keyup(function(e){
                if( $(this).val().length == 4 ) {
                    $(this).next().focus();
                } else if( $(this).val().length == 0 ) {
                    if( e.keyCode == 8 ) {
                        $(this).prev().focus();
                    }
                }
            });
            $('.inputss.two input').keyup(function(e){
                if( $(this).val().length == 2 ) {
                    $(this).next().focus();
                } else if( $(this).val().length == 0 ) {
                    if( e.keyCode == 8 ) {
                        $(this).prev().focus();
                    }
                }
            });
            $('.inputss.three input').keyup(function(e){
                if( $(this).val().length == 1 ) {
                    $(this).next().focus();
                } else if( $(this).val().length == 0 ) {
                    if( e.keyCode == 8 ) {
                        $(this).prev().focus();
                    }
                }
            });
            $('.inputss.four input').keyup(function(e){
                if( $(this).val().length == 1 ) {
                    $(this).next().focus();
                } else if( $(this).val().length == 0 ) {
                    if( e.keyCode == 8 ) {
                        $(this).prev().focus();
                    }
                }
            });
            $('.inputss input').click(function(){
                $(this).closest('.inputss').find('input').each(function(i){
                    if( $(this).val() == '' ) {
                        $(this).focus();
                        return false;
                    }
                }); 
            });
        </script>
