            }

            if( $(this).attr('class') == 'zz' )
                return false;

            if( $(this).attr('class') == 'remove' ) {
                $('.inner-inputs input.yes').last().val('').removeClass('yes').addClass('no');
                var new_val = $('#password').val().slice(0,-1);
                $('#password').val(new_val);
                return false;
            }

            var pass_length = $('#password').val().length;
            var val = $(this).text();
            var old_val = $('#password').val();
            var zz = old_val + val;
            $('.inputs input').each(function(i){
                if( $(this).val() == '' ) {
                    $(this).val(val);
                    $(this).addClass('yes');
